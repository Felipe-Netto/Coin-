generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id_user   Int     @id @default(autoincrement())
  email String  @unique
  senha String
  nome  String
  nascimento DateTime @db.Date
  telefone String
  token String? @unique
  saldo Decimal?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
 